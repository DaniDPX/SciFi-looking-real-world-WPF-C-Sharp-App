<Window x:Class="SciFi_HUD_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:SciFi_HUD_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="485.36" Width="551.572" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">
    <Grid Margin="0,0,-4.5,-3">
        <Image x:Name="Background" Margin="10,10,20.572,19.577" Source="HUD_Background.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" MouseDown="drag_view"/>
        <Button Content="ተርሚናል" HorizontalAlignment="Left" Margin="334.732,213.856,0,0" VerticalAlignment="Top" Width="114.855" RenderTransformOrigin="0.5,0.5" Height="30.567" BorderBrush="#FF018AF3" Background="{x:Null}" Foreground="#FF45AEFF">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Image gif:ImageBehavior.RepeatBehavior="0x"
               gif:ImageBehavior.AnimatedSource="globe-earth-animation-15.gif" Height="216.987" VerticalAlignment="Top" HorizontalAlignment="Left" Width="247.072" Margin="67,217.948,0,0" />

    </Grid>
</Window>
